/etc/nut/eth0/env-down/*
/etc/nut/eth0/env-up/*
/etc/nut/eth0/up/*
/etc/nut/eth0/pre-down/*
/etc/nut/eth0/post-down/*

/etc/nut/eth0/up/samba-stop:
#!/bin/bash

if [ $ENVIRONMENT -eq "home" ]
then
	/etc/init.d/samba start
else
	/etc/init.d/samba stop
fi
